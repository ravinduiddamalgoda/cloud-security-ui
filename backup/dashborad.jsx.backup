      y: {
        grid: { color: '#374151', drawBorder: false },
        ticks: { color: '#9CA3AF', font: { size: 10 } }
      }
    }
  };

  const barChartOptions = {
    ...darkChartOptions,
    indexAxis: 'y',
    plugins: {
      legend: { display: false }
    }
