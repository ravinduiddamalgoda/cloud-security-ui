    const mockMlMetrics = {
      'ModelLatency (ms)': generateMockMetric('Model Latency (ms)', 250, 100, 12),
      Invocations: generateMockMetric('Invocations', 850, 300, 12),
      CPUUtilization: generateMockMetric('CPU Utilization (%)', 65, 20, 12),
